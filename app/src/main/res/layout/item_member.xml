<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="#E3E3E3"
    android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="150dp"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/img_item_member"
                android:src="@drawable/logo"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:id="@+id/tv_name_item_member"
                android:textSize="18dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email@gmal.com"
                android:id="@+id/tv_gmail_item_member"
                android:textSize="18dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cấp quản lý: 2"
                android:id="@+id/tv_cv_item_member"
                android:textSize="18dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDT:0394092110"
                android:id="@+id/tv_phone_item_member"
                android:textSize="18dp"/>
        </LinearLayout>
       <LinearLayout
           android:layout_marginLeft="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:layout_marginTop="7dp"
               android:layout_width="30dp"
               android:layout_height="50dp"
               android:src="@drawable/edit"
               android:id="@+id/edit_item_member"/>
           <ImageView
               android:layout_marginTop="7dp"
               android:layout_width="30dp"
               android:layout_height="50dp"
               android:src="@drawable/delete"
               android:id="@+id/delete_item_member"/>
       </LinearLayout>

</LinearLayout>