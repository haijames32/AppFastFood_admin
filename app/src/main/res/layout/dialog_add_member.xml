<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EAEAEA"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Fragment.HomeFrag">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/avatar_newNV_dialog"
                   android:layout_marginBottom="20dp"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/avatar_user_male"
                   android:layout_margin="5dp"
                   android:text="Thêm quản lý"/>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_margin="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_name_dialog_member"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/person_24"
                       android:drawablePadding="8dp"
                       android:hint="Họ và tên" />
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_email_dialog_member"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/email"
                       android:drawablePadding="8dp"
                       android:hint="Email" />
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_roles_dialog_member"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/admin_24"
                       android:enabled="false"
                       android:text="2"
                       android:drawablePadding="8dp"
                       android:hint="Quyền quản trị" />
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_phone_dialog_member"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/phone"
                       android:drawablePadding="8dp"
                       android:hint="Số điện thoại" />
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp"
                   app:passwordToggleEnabled="true">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_passwd_dialog_member"
                       android:layout_width="match_parent"
                       android:inputType="textPassword"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/lock"
                       android:drawablePadding="8dp"
                       android:hint="Password" />
               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content"
                   app:boxCornerRadiusBottomEnd="17dp"
                   app:boxCornerRadiusBottomStart="17dp"
                   app:boxCornerRadiusTopEnd="17dp"
                   app:boxCornerRadiusTopStart="17dp"
                   app:passwordToggleEnabled="true">
                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/ed_checkpw_dialog_member"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="textPassword"
                       android:drawableLeft="@drawable/lock"
                       android:drawablePadding="8dp"
                       android:hint="Xác nhận password" />
               </com.google.android.material.textfield.TextInputLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center">
                   <Button
                       android:id="@+id/btn_add_dialog_member"
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:text="Thêm"/>
               </LinearLayout>
           </LinearLayout>

</ScrollView>